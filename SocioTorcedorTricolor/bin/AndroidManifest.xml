<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sociotorcedortricolor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.sociotorcedortricolor.TelaLogin"
            android:label="@string/title_activity_tela_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.sociotorcedortricolor.TelaInicial"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.sociotorcedortricolor.TelaEnviarCodigo"
            android:label="@string/title_activity_tela_enviar_codigo" >
        </activity>
        <activity
            android:name="com.example.sociotorcedortricolor.TelaCadastro"
            android:label="@string/title_activity_tela_cadastro" >
        </activity>
        <activity
            android:name="com.example.sociotorcedortricolor.TelaBoleto"
            android:label="@string/title_activity_tela_boleto" >
        </activity>
        <activity
            android:name="com.example.sociotorcedortricolor.TelaAbas"
            android:label="@string/title_activity_tela_abas" >
        </activity>
        <activity
            android:name="com.example.sociotorcedortricolor.TelaPerfil"
            android:label="@string/title_activity_tela_perfil"
            android:parentActivityName="com.example.sociotorcedortricolor.TelaAbas" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.sociotorcedortricolor.TelaAbas" />
        </activity>
        <activity
            android:name="com.example.sociotorcedortricolor.TelaHistoricoPontos"
            android:label="@string/title_activity_tela_historico_pontos" >
        </activity>
        <activity
            android:name="com.example.sociotorcedortricolor.TelaHistoricoCompras"
            android:label="@string/title_activity_tela_historico_compras" >
        </activity>
        <activity
            android:name="com.example.sociotorcedortricolor.TelaConfirmarCompra"
            android:label="@string/title_activity_tela_confirmar_compra" >
        </activity>
        <activity
            android:name="com.example.sociotorcedortricolor.TelaPagamentoTaxa"
            android:label="@string/title_activity_tela_pagamento_taxa" >
        </activity>
        <activity
            android:name="com.example.sociotorcedortricolor.TelaConfirmarEndereco"
            android:label="@string/title_activity_tela_confirmar_endereco" >
        </activity>
    </application>

</manifest>
