<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sociotorcedortricolor.TelaEnviarCodigo$PlaceholderFragment" >
    
    <TextView
        android:id="@+id/txtDigiteEEnvie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:text="@string/digite_e_envie_o_codigo"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/txtFCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtDigiteEEnvie"
        android:layout_alignRight="@+id/txtDigiteEEnvie"
        android:layout_below="@+id/txtDigiteEEnvie"
        android:layout_marginTop="16dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnEnviarCodigo"
        android:background="#FF0000"
        android:text="@string/tela_codigo"
        android:textColor="#FFFFFF" 
         android:layout_width="106dp"
        android:layout_height="38dp"
        android:layout_below="@+id/txtFCodigo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>
    

</RelativeLayout>
